[
  {test_task, [
    {db, #{
      host => "localhost",
      username => "postgres",
      password => "postgres",
      database => "test_task"
    }},
    {db_pool, #{
      name => {local, pg_pool},
      worker_module => test_task_db,
      size => 5,
      max_overflow => 2
    }},
    {redis_pool, #{
      name => {local, redis_pool},
      worker_module => redis_worker,
      size => 3,
      max_overflow => 5,
      host => "127.0.0.1",
      port => 6379
    }}
  ]},

  {lager, [
    {handlers, [
      {lager_console_backend, [{level, info}]},
      {lager_file_backend, [{file, "debug.log"}, {level, debug}]},
      {lager_file_backend, [{file, "info.log"}, {level, info}]},
      {lager_file_backend, [{file, "warning.log"}, {level, warning}]},
      {lager_file_backend, [{file, "error.log"}, {level, error}]}
    ]}
  ]}
].